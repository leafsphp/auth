{
    "name": "leafs/auth",
    "description": "Leaf PHP auth helper",
    "keywords": [
        "authentication",
        "simple auth",
        "login",
        "register",
        "leaf",
        "php",
        "framework"
    ],
    "homepage": "https://leafphp.netlify.app/#/",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Darko",
            "email": "mickdd22@gmail.com",
            "homepage": "https://mychi.netlify.app",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Leaf\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "leafs/date": "*",
        "leafs/password": "*",
        "leafs/session": "*",
        "leafs/db": "*",
        "leafs/form": "*",
        "leafs/http": "*",
        "leafs/alchemy": "dev-next"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "pestphp/pest": "^1.0 | ^2.0",
        "friendsofphp/php-cs-fixer": "^3.64"
    },
    "scripts": {
        "test": "./vendor/bin/alchemy setup --test",
        "alchemy": "./vendor/bin/alchemy setup",
        "lint": "./vendor/bin/alchemy setup --lint",
        "actions": "./vendor/bin/alchemy setup --actions"
    }
}
